pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE = "img/java-cicd:latest"
        DOCKER_USER = credentials('docker')   // Jenkins credential ID
        DOCKER_PASS = credentials('docker')   // Jenkins credential ID
    }

    stages {
        stage('Checkout') {
            steps {
                echo "Pulling code from GitHub..."
                git 'https://github.com/KARTHIKNAIDU-NAIDU/nkn.git'
            }
        }

        stage('Build Java') {
            steps {
                echo "Compiling Java program..."
                sh 'javac HelloWorld.java'
            }
        }

        stage('Test Java') {
            steps {
                echo "Running Java program..."
                sh 'java HelloWorld'
            }
        }

        stage('Docker Build') {
            steps {
                echo "Building Docker image..."
                sh 'docker build -t $DOCKER_IMAGE .'
            }
        }

        stage('Docker Push') {
            steps {
                echo "Pushing Docker image to DockerHub..."
                sh '''
                echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin
                docker push $DOCKER_IMAGE
                '''
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploying Docker container..."
                sh '''
                docker rm -f java-app || true
                docker run -d --name java-app $DOCKER_IMAGE
                '''
            }
        }
    }
}

